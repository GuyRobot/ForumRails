<div class="column is-3 is-offser-1">
    <h3 class="title is-5 has-text-grey-light">Channels</h3>

    <ul class="list">
        <% @channels.each do |channel| %>
          <li><%= link_to channel.channel, channel %></li>
        <% end %>
    </ul>

    <br>

    <% if has_role?(:admin) %>
      <%= link_to  "New channel", new_channel_path, class: "button is.info" %>
    <% end %>

</div>